<%- include('head', {}); %>

<main class="write-feature-page">
        <section class="section">
            <h1 class="section-title">Feature Editor</h1>
        
        <form action="/feature" method="post">
            
            <div class="form-group">
                <input type="text" class="form-control" name="feature-title" placeholder="Feature Title">
                <input type="text" class="form-control" name="feature-subtitle" placeholder="Feature Subtitle">
                <input type="text" class="form-control" name="review" placeholder="Feature Text">
            </div>

               <select name="reviews" id="reviews" class="review-select" multiple>
                <% for(var i=0; i<reviews.length; i++) { %>
                    <option value="<%=reviews[i]._id%>"><%=reviews[i].reviewTitle%></option>
                <% } %>
                </select> 
            
            <div class="form-group">
                <div class="privacy-toggle">
                <h3 class="form header">Privacy</h3>
                <label class="privacy-button">
                    <input type="checkbox" id="privacy-toggle">
                    <div class="slider"></div>
                </label>
                <label for="privacy-toggle" name="privacy-toggle">Private</label>
                </div>
            </div>

            <button class="submit-button" type="submit">Submit<span class="visually-hidden">Submit Feature</span></button>
        </form>
        
        </section>  
    </main>

    <%- include('footer', {}); %>
    <%- include('scripts', {}); %>

</body>
</html>