<body>
    <%- include('nav-loggedout', {}); %>
    
    <main class="badges-page">
        <section class="section">
            <h1 class="section-title">Badges</h1>
            <p class="section-content">Show Lists help you keep an organized list of each theater show you have seen. </p>
            <a href="/signup"><button class="signup-button">Sign Up</button></a>
        </section>
        
        <section class="section">
            <h1 class="section-title">Shows</h1>
            <div class="badges-display">
                <img src="http://placehold.it/150x150" alt="" class="badge-image">
                <img src="http://placehold.it/150x150" alt="" class="badge-image">
                <img src="http://placehold.it/150x150" alt="" class="badge-image">
                <img src="http://placehold.it/150x150" alt="" class="badge-image">
            </div>
        </section>

       <section class="section">
            <h1 class="section-title">Genres</h1>
            <div class="badges-display">
                <img src="http://placehold.it/150x150" alt="" class="badge-image">
                <img src="http://placehold.it/150x150" alt="" class="badge-image">
                <img src="http://placehold.it/150x150" alt="" class="badge-image">
                <img src="http://placehold.it/150x150" alt="" class="badge-image">
            </div>
