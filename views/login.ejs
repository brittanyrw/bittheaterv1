<%- include('head', {}); %>
    
    <main class="login-page">
        <section class="section login-form">
            <h1 class="section-title">Log In</h1>
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <form action="/login" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="hello@email.com" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="*********" id="password" required>
                </div>
                <button type="submit" class="login-button">Login</button>
            </form>

            <p class="form-link">Need an account? <a href="/signup">Sign Up</a></p>
        </section>
    </main>

    <%- include('footer', {}); %>
    <%- include('scripts', {}); %>
</body>
</html>





    